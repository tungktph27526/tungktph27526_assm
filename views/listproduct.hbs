                    </div>
                </div>
            </nav>
        </div>
        <div class="row">
            <h1>Danh sách sản phẩm</h1>
        </div>
        <form action="addNewPr" method="get">
            <button type="submit">Thêm sản phẩm</button>
        </form>
        <div class="row">
            <div class="col-12">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Tên sản phẩm</th>
                            <th scope="col">Đơn giá</th>
                            <th scope="col">Hình ảnh</th>
                            <th scope="col">Màu sắc</th>
                            <th scope="col">Loại sản phẩm</th>
                            <th scope="col">Khách hàng</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each prData}}
                        <tr>
                            <th scope="row">{{@index}}</th>
                            <td>{{namePr}}</td>
                            <td>{{price}}</td>
                            <td>{{imgPr}}</td>
                            <td>{{color}}</td>
                            <td>{{type}}</td>
                            <td>{{nameUser}}</td>
                            <td class="col-1">
                                <form method="get" action="updatePr">
                                    <button type="submit">Sửa</button>
                                    <input value={{id}} class="d-none" name="prNum">
                                </form>
                                <form method="get" action="deletePr">
                                    <button type="submit">Xóa</button>
                                    <input value={{id}} class="d-none" name="prNum">
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
